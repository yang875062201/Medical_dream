<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorWhite">


        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_back"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10.0dip"
            android:scaleType="center"
            android:src="@drawable/guanbi_2"/>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="忘记密码"
            android:textColor="@color/color_1B"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/image_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:paddingRight="20dp"
            android:src="@drawable/ic_message2" />


    </RelativeLayout>
    <View
        android:background="@color/color_DC"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:paddingLeft="40dp"
        android:paddingRight="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/ll_quick"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/txt1"
                android:text="+86"
                android:textColor="@color/colorTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/view1"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txt1"
                android:background="@drawable/shu"
                android:layout_width="1dp"
                android:layout_height="15dp"/>
            <EditText
                android:id="@+id/et_phone"
                android:inputType="number"
                android:padding="10dp"
                android:maxLength="11"
                android:singleLine="true"
                android:hint="请输入手机号"
                android:textSize="14sp"
                android:background="@color/colorWhite"
                android:layout_toRightOf="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <View
            android:layout_marginLeft="10dp"
            android:background="@drawable/heng"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_code"
                android:layout_toLeftOf="@+id/view2"
                android:inputType="number"
                android:padding="10dp"
                android:maxLength="6"
                android:singleLine="true"
                android:hint="请输入验证码"
                android:textSize="14sp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <View
                android:id="@+id/view2"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_get_ver"
                android:background="@drawable/shu"
                android:layout_width="1dp"
                android:layout_height="15dp"/>
            <TextView
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                android:paddingBottom="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/tv_get_ver"
                android:text="获取验证码"
                android:textColor="@color/colorTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <View
            android:background="@drawable/heng"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="14sp" />
        <View
            android:background="@color/color_DC"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>


    <TextView
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/theme_circle_bg"
        android:gravity="center"
        android:padding="12dp"
        android:text="确定"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>