<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_80"
        android:id="@+id/all_image"/>


    <LinearLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/all_tv1"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/all_tv2"
                android:padding="@dimen/dp_5"
                android:gravity="center"
                android:textColor="#6BA9FB"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/all_shape"
                android:text="1"/>

            <TextView
                android:id="@+id/all_tv3"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:padding="@dimen/dp_5"
                android:gravity="center"
                android:textColor="#6BA9FB"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/all_shape"
                android:text="1"/>

            <TextView
                android:id="@+id/all_tv4"
                android:padding="@dimen/dp_5"
                android:gravity="center"
                android:textColor="#6BA9FB"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/all_shape"
                android:text="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/all_tv5"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FE5E5F"/>
    </LinearLayout>

</LinearLayout>
